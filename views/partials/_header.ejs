<header>
  <h1>TinyApp</h1>
</header>

<div style="margin-bottom: 20px;">
    <form method="GET" action="/" style="display: inline-block;">
    <input class="pure-button pure-button-primary" type="submit" value="Home">
    </form>
  <% if (!userid) { %>
    <form method="GET" action="/register" style="display: inline-block;">
      <input class="pure-button pure-button-primary" type="submit" value="Register">
    </form>
    <form method="GET" action="/login" style="display: inline-block;">
      <input class="pure-button pure-button-primary" type="submit" value="Log In">
    </form>
    <% } else { %>
    <form method="POST" action="/urls" style="display: inline-block;">
      <input class="pure-button pure-button-primary" type="submit" value="My Links">
    </form>
    <form method="POST" action="/logout" style="display: inline-block;">
      <input class="pure-button pure-button-primary" type="submit" value="Log Out">
    </form>
    <h3>Logged in as: </h3><div style="color: rgb(180, 10, 10); "><%= email %></div>
  <% } %>
</div>